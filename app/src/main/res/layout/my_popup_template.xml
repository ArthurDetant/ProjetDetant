<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ParamÃ¨tre"
        android:textColor="#000000"
        android:textSize="50dp"/>

    <EditText
        android:id="@+id/editTextpuissance"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Puissance de base:"
        android:inputType="number"
        android:textColor="#000000"
        android:gravity="center"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/editTextvie"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Points de vie de base:"
        android:inputType="number"
        android:textColor="#000000"
        android:gravity="center"
        android:singleLine="true"/>
    <EditText
        android:id="@+id/editTextmaxmonstre"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Puissance max monstres:"
        android:inputType="number"
        android:textColor="#000000"
        android:gravity="center"
        android:singleLine="true"/>

    <Button
        android:id="@+id/buttonvalider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/valider"
        android:onClick="onPop"/>

</LinearLayout>